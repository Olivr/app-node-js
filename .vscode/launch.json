  "version": "0.2.0",
  "configurations": [
    {
      "name": "Local: Attach to Node.js",
      "type": "node",
      "request": "attach",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Docker/k8s (dev): Attach to Node.js",
      "type": "node",
      "request": "attach",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}/src",
      "remoteRoot": "/app/src"
    },
    {
      "name": "Docker/k8s (debug): Attach to Node.js",
      "type": "node",
      "request": "attach",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}/src",
      "remoteRoot": "/app"
    }
  ]
}
